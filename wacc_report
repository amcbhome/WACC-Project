\section{Step-by-Step WACC Calculations}
\subsection{1) Cost of Equity (CAPM)}
\[
K_e = R_f + \beta (R_m - R_f)
\]
\[
K_e = 0.03 + 1.2(0.08 - 0.03) = 0.09 = 9.00\%
\]

\subsection{2) Cost of Preference Shares}
\[
K_{ps} = 6.50\%
\]

\subsection{3) Cost of Bank Loans (after tax)}
\[
K_{d1} = 5.00\% (1 - 0.20) = 4.00\%
\]

\subsection{4) Cost of Debentures (after tax)}
\[
K_{d2} = 4.50\% (1 - 0.20) = 3.60\%
\]

\subsection{5) Cost of Retained Earnings}
\[
K_{re} = 8.25\%
\]

\section{Capital Structure Proportions}
\[
\text{Total Market Value} = 6{,}000{,}000 + 1{,}500{,}000 + 2{,}000{,}000 + 1{,}000{,}000 + 500{,}000 = 11{,}000{,}000
\]

